{
	"name": "smoothly",
	"version": "0.1.11",
	"description": "Web component library written in Stencil.",
	"author": "PayFunc",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/payfunc/smoothly"
	},
	"bugs": {
		"url": "https://github.com/payfunc/smoothly/issues"
	},
	"homepage": "https://payfunc.com/open-source/smoothly",
	"private": false,
	"main": "dist/index.cjs.js",
	"module": "dist/index.js",
	"es2015": "dist/esm/index.js",
	"es2017": "dist/esm/index.js",
	"types": "dist/custom-elements/index.d.ts",
	"collection": "dist/collection/collection-manifest.json",
	"collection:main": "dist/collection/index.js",
	"unpkg": "dist/smoothly/smoothly.js",
	"files": [
		"dist/",
		"loader/"
	],
	"git": {
		"tagName": "v${version}"
	},
	"github": {
		"release": true
	},
	"jest": {
		"globals": {
			"ts-jest": {
				"tsConfig": "tsconfig.test.json"
			}
		},
		"testEnvironment": "node",
		"testRegex": "((\\.|/)(test|spec))(\\.|\\/.+)(jsx?|tsx?)$",
		"testPathIgnorePatterns": [
			"node_modules/",
			"dist/"
		],
		"collectCoverageFrom": [
			"**/*.{ts,tsx,js,jsx}",
			"!**/node_modules/**",
			"!**/dist/**"
		],
		"preset": "ts-jest",
		"testMatch": null
	},
	"scripts": {
		"build": "stencil build",
		"start": "stencil build --dev --watch --serve",
		"lint": "eslint 'src/**/*.{js,ts,tsx}'",
		"fix": "eslint 'src/**/*.{js,ts,tsx}' --fix",
		"test": "stencil test --spec --e2e",
		"test.watch": "stencil test --spec --e2e --watchAll",
		"clean": "rm -rf .stencil/ dist/ node_modules/ loader/ www/"
	},
	"dependencies": {
		"authly": "0.0.40",
		"isoly": "0.0.15",
		"normalize.css": "^8.0.1",
		"stencil-router-v2": "^0.5.1-0",
		"tidily": "0.0.30"
	},
	"devDependencies": {
		"@stencil/core": "^2.0.3",
		"@types/jest": "26.0.9",
		"@types/puppeteer": "3.0.1",
		"@typescript-eslint/eslint-plugin": "^4.1.0",
		"@typescript-eslint/parser": "^4.1.0",
		"eslint": "^7.7.0",
		"eslint-plugin-prettierx": "github:nilssonemma/eslint-plugin-prettierx#master",
		"jest": "26.4.0",
		"jest-cli": "26.4.0",
		"prettierx": "github:simonmika/prettierx#newline-before-clause",
		"puppeteer": "5.2.1",
		"typescript": "^3.9.7"
	}
}
