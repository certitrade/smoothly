{
  "name": "smoothly",
  "private": false,
  "version": "0.0.32",
  "description": "Web component library written in Stencil.",
  "license": "MIT",
  "module": "dist/esm/index.js",
  "main": "dist/index.js",
  "unpkg": "dist/smoothly.js",
  "types": "dist/types/components.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "files": [
    "dist/",
    "dist/**/*"
  ],
  "scripts": {
    "lint": "tslint --project .",
    "build": "stencil build",
    "start": "stencil build --dev --watch --serve",
    "test": "stencil test --spec --e2e",
    "test.unit": "stencil test --spec",
    "test.watch": "stencil test --spec --e2e --watchAll",
    "prepare": "npm run build",
    "clean": "rm -rf dist doc www"
  },
  "dependencies": {
    "@stencil/core": "0.18.1",
    "isoly": "0.0.6"
  },
  "devDependencies": {
    "@types/jest": "24.0.11",
    "@types/puppeteer": "1.12.3",
    "jest": "24.7.1",
    "jest-cli": "^24.7.1",
    "puppeteer": "1.14.0",
    "tslint": "^5.15.0",
    "workbox-build": "4.2.0"
  }
}
